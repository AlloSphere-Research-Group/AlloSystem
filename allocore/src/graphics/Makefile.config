#=========================================================================
# Allo Graphics makefile configuration
#=========================================================================

GFX_SRC = \
	al_Asset.cpp \
	al_FBO.cpp \
	al_GPUObject.cpp \
	al_Graphics.cpp \
	al_Image.cpp \
	al_Isosurface.cpp \
	al_Lens.cpp \
	al_Light.cpp \
	al_Mesh.cpp \
	al_Shader.cpp \
	al_Shapes.cpp \
	al_Stereographic.cpp \
	al_Texture.cpp \
	al_Font.cpp

ifeq ($(IMAGE_BINDING), FreeImage)
	EXT_LDFLAGS += -lfreeimage
endif

EXT_LDFLAGS += -lassimp
EXT_LDFLAGS += -lfreetype

# Linux:
ifeq ($(PLATFORM), linux)

  INC_DIRS +=	/usr/include/freetype2

# Mac OS X:
else ifeq ($(PLATFORM), macosx)

  # freetype
  EXT_LDFLAGS += -L/usr/X11/lib/
  INC_DIRS += /usr/X11/include/freetype2
  INC_DIRS += /usr/X11/include/

# Windows
else ifeq ($(PLATFORM), windows)
endif
